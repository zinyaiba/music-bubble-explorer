{
  "name": "music-bubble-explorer",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 100",
    "lint:fix": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 100 --fix",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,md}\"",
    "deploy": "echo 'Deployment is handled by GitHub Actions. Push to main branch to deploy.'",
    "predeploy": "npm run build",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "deployment-check": "node scripts/deployment-check.cjs",
    "pre-deploy-check": "npm run build && npm run deployment-check",
    "pre-push": "node scripts/pre-push-validation.cjs",
    "pre-push:fast": "node scripts/pre-push-validation.cjs --skip-tests",
    "validate": "node scripts/pre-push-validation.cjs",
    "check": "node scripts/quick-build-check.cjs",
    "pre-commit-check": "node scripts/pre-commit-validation.cjs",
    "setup-hooks": "node scripts/setup-git-hooks.cjs",
    "prepare": "husky"
  },
  "dependencies": {
    "firebase": "^12.4.0",
    "framer-motion": "^10.16.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.7.2",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.4",
    "prettier": "^3.0.3",
    "terser": "^5.44.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^3.2.4"
  }
}
